{% trans_default_domain "symbb_frontend" %}


{% extends getSymbbTemplate('forum') ~ ':Angular:Forum/layout.html.twig' %}

{% block section_content %}
<div class="panel panel-primary">
    <div class="panel-heading">{{ 'Members'|trans() }}</div>
    <div class="panel-body">
        <table class="table table-striped table-bordered table-sortable responsive">
            <thead>
                <tr>
                    <th> {{ 'Username'|trans() }} </th>
                    <th> {{ 'Beitr√§ge'|trans() }} </th>
                    <th> {{ 'Dabei seit'|trans() }} </th>
                    <th> {{ 'letzer Login'|trans() }} </th>
                    <th ng-repeat="field in userfields"> [[field.label]] </th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="entry in entries">
                    <td><a symbb-link="user_profile" param-id="[[entry.id]]" param-username="[[entry.username]]">[[entry.username]]</a></td>
                    <td>[[entry.count.post]]</td>
                    <td>[[entry.created | date:'dd.MM.yyyy']]</td>
                    <td>[[entry.lastLogin | date:'dd.MM.yyyy']]</td>
                    <td ng-repeat="field in entry.fields"> [[field.value]] </td>
                </tr>
            </tbody>
        </table>
        <pagination route="userlist"></pagination>
    </div>
</div>
{% endblock %}