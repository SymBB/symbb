{% trans_default_domain "symbb_frontend" %}

{% extends getSymbbTemplate('forum') ~ ':Angular:Ucp/layout.html.twig' %}

{% block section_content %}

<form class="form-horizontal">
    <fieldset>
        <div id="legend">
            <legend class="">{{ 'Security'|trans }}
            </legend>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">{{ 'Password'|trans }}</label>
            <div class="col-sm-10">
                <input type="password" class="password-field form-control" ng-model="user.changePassword.password">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">{{ 'repeat Password'|trans }}</label>
            <div class="col-sm-10">
                <input type="password" class="password-field form-control" ng-model="user.changePassword.repeat">
            </div>
        </div>
        <div class="pull-right btn-group">
            <button class="btn btn-success btn-sm" type="submit" ng-click="update(user)" ng-disabled="form.$invalid">{{ 'Save'|trans }}</button>
            <button class="btn btn-danger btn-sm" symbb-js-link="user_ucp">{{ 'Abort'|trans }}</button>
        </div>
        <div class="clear"></div>
    </fieldset>
</form>

{% endblock %}