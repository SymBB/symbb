{% trans_default_domain "symbb_frontend" %}

{% extends getSymbbTemplate('forum') ~ ':Angular:Ucp/layout.html.twig' %}

{% block section_content %}

<form role="form">
    <div class="form-group">
        <label for="receivers">{{ 'receivers'|trans }}</label>
        <symbb-user-autocomplete ng-model="message.receivers"  class="form-control" id="receivers" ></symbb-user-autocomplete>
    </div>
    <div class="form-group">
        <label for="subject">{{ 'subject'|trans }}</label>
        <input ng-model="message.subject" class="form-control" id="subject" required>
    </div>
    <div class="form-group">
        <label for="message[rawText]">{{ 'message'|trans }}</label>
        <symbb-editor-default>
            <textarea ng-model="message.message" required placeholder="{{'Give Your text here'|trans}}" name="message[message]" class="form-control"></textarea>
        </symbb-editor-default>
    </div>
    <button type="submit" class="btn btn-default" ng-click="save()">{{ 'save'|trans }}</button>
</form>

{% endblock %}