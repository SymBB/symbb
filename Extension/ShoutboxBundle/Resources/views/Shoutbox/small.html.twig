{% trans_default_domain "symbb_frontend" %}

<div class="symbb_extension_scoutbox" symbb-extension-shoutbox>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">{{ 'Shoutbox'|trans }}</h3>
        </div>
        <div class="panel-body">
            <div class="shoutbox_content">
                <div class="shoutbox_row" ng-repeat="entry in extension.shoutbox.entries">
                    <div class="shoutbox_userdata">
                        [[entry.author.username]]: {% trans with {'%date%': "[[ entry.date | date:'dd.MM.yyyy']]", '%time%': "[[ entry.date | date:'HH:mm']]"} %}on %date% at %time%{% endtrans %}
                    </div>
                    <div class="shoutbox_date">

                    </div>
                    <div class="shoutbox_message">
                        [[entry.message]]
                    </div>
                </div>
            </div>
            <div class="shoutbox_input">
                <textarea ng-model="extension.shoutbox.newMessage"></textarea>
                <button class="btn btn-default" ng-click="saveExtensionShoutboxMessage()">{{ 'save'|trans }}</button>
            </div>
        </div>
    </div>
</div>