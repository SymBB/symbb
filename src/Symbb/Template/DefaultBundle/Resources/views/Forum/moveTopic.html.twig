{% trans_default_domain "symbb_frontend" %}
<div type="button" class="btn btn-default btn-xs">
    <span class="glyphicon glyphicon-random" data-toggle="modal" data-target="#modal_{{ object.getId() }}"></span>
    <!-- Modal -->
    <div class="modal fade bs-example-modal-sm" id="modal_{{ object.getId() }}" data-backdrop="false" tabindex="-1"
         role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="{{ path("symbb_forum_topic_move") }}" method="post">
                    <input type="hidden" value="{{ object.getId() }}" name="topic"/>

                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">{{ 'move topic'|trans }}</h4>
                    </div>
                    <div class="modal-body">
                        <div class="input-group">
                            <select class="form-control" id="move_topic_target_{{ object.getId() }}" name="targetForum">
                                {% for id, name in getSymbbForumManager().getSelectList('forum') %}
                                    <option value="{{ id }}">{{ name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <!-- /input-group -->
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary btn-move"
                                onclick="submit()">{{ 'move'|trans }}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>