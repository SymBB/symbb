{% extends getSymbbTemplate('acp') ~ ':Acp:Layout/edit.html.twig' %}

{% trans_default_domain "symbb_backend" %}

{% form_theme form getSymbbTemplate('acp') ~ '::form.html.twig' %}

{% block symbb_sidebar %}
{{ knp_menu_render('SymBBCoreAdminBundle:Builder:systemMenu', {'template': getSymbbTemplate('acp') ~ '::sidemenu.html.twig'}) }}
{% endblock %}

{% block symbb_edit_header %}{{ 'save entry'|trans }}{% endblock %}

{% block symbb_edit_body %}
{{ form_startbootstrap(form) }}
{{ form_row(form._token) }}
        {{ form_restbootstrap(form) }}
        <input type="hidden" name="id" value="{{ entity.getId() }}" />

        <button onclick="submit();" type="button" class="btn btn-info">{{ 'save'|trans({}) }}</button>
        <div class="clear"></div>
    
{{ form_end(form) }}
{% endblock %}
