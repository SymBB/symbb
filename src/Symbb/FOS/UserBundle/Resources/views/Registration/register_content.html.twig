{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form getSymbbTemplate('forum') ~ '::form.html.twig' %}

<form action="{{ path('symbb_register') }}" {{ form_enctype(form) }} method="post" role="form" class="form-horizontal">
    {{ form_row(form.email) }}
    {{ form_row(form.username) }}
    {{ form_row(form.plainPassword.first) }}
    {{ form_row(form.plainPassword.second) }}
    {{ form_row(form.terms) }}
    {{ form_rest(form) }}
    <div class="form-group">
        <label class="col-sm-2 control-label required"></label>
        <div class="col-sm-10">
            <div class="btn-group">
                <a href="{{ path('symbb_terms') }}" target="_blank" class="btn btn-info">{{ 'AGBs Ã¶ffnen'|trans }}</a>
                <input type="submit" id="_submit" name="_submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary"/>
            </div>
        </div>
    </div>
</form>