{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form getSymbbTemplate('forum') ~ '::form.html.twig' %}

<form action="{{ path('symbb_register') }}" {{ form_enctype(form) }} method="post" role="form" class="form-horizontal">
        {{ form_rowbootstrap(form.email) }}
        {{ form_rowbootstrap(form.username) }}
        {{ form_rowbootstrap(form.plainPassword.first) }}
        {{ form_rowbootstrap(form.plainPassword.second) }}
         <div class="form-group">
            {{ form_labelbootstrap(form.terms) }}
            <div class="col-sm-10">
            {{ form_widget(form.terms) }}
            ( <a href=" {{ path('symbb_terms') }} ">{{ 'AGBs Ã¶ffnen'|trans }}</a> )
            </div>
        </div>
        {{ form_rest(form) }}
                 
        <div class="form-group">
            <label class="col-sm-2 control-label required"></label>
            <div class="col-sm-10">
                <input type="submit" id="_submit" name="_submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary" />
                
            </div>
        </div>
</form>