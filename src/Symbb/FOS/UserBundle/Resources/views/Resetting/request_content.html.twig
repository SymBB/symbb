{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request form-signin form-horizontal">
    <div>
        {% if invalid_username is defined %}
            <div class="alert alert-danger" role="alert">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</div>
        {% endif %}
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">{{ 'resetting.request.username'|trans }}</label>
            <div class="col-sm-10">
                <input type="text" name="username" id="username" placeholder="Benutzername:" required="" autofocus="" class="form-control">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <input class="btn btn-primary" type="submit" value="{{ 'resetting.request.submit'|trans }}" />
        </div>
    </div>
    <div class="clear"></div>
</form>